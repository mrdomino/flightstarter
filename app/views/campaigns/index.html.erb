<h1>Campaigns</h1>
<ul>
  <% @campaigns.each do |campaign| %>
    <li class="campaign">
      <p class="title">
        <strong><%= campaign.title %></strong>
      </p>
      <p class="description">
        <%= campaign.description %>
      </p>
      <p class="requisite_funding">
        <%= campaign.requisite_funding %>
      </p>
    </li>
  <% end %>
</ul>
